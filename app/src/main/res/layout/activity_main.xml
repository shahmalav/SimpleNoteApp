    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shahmalav.androidprojects.simplenoteapp.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list">
    </ListView>

    <Button
